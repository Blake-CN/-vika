#!/usr/bin/env node

const yarg = require('yargs');

const lanucher = (options) => {
  require('../index.js')(options);
};
// eslint-disable-next-line
yarg
  .usage('$0 <cmd> [args]')
  .command('work [page]', '构建[文件夹]', (yargs) => {
    yargs.option('page', {
      type: 'string',
      default: 'all',
      describe: 'name of the dir, eg:index',
    });
    yargs.option('config', {
      type: 'string',
      default: '',
      describe: 'Use the specified config',
    });
  }, (argv) => {
    lanucher(Object.assign({
      action: 'work',
      config_file: argv.config,
    }, argv));
  })
  .example('$0 work index', 'build index dir with development mode')
  .help('h')
  .alias('h', 'help')
  .version(require('../package.json').version)
  .epilog('(#^.^#)@Blake')
  .alias('v', 'version')
  .argv;
